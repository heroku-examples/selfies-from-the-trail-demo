#!/usr/bin/env bash

set -eo pipefail

export KAFKA_URL="$(heroku config:get KAFKA_URL -a pure-heroku-demo-staging)"
export KAFKA_CLIENT_CERT="$(heroku config:get KAFKA_CLIENT_CERT -a pure-heroku-demo-staging)"
export KAFKA_CLIENT_CERT_KEY="$(heroku config:get KAFKA_CLIENT_CERT_KEY -a pure-heroku-demo-staging)"
export KAFKA_PREFIX="$(heroku config:get KAFKA_PREFIX -a pure-heroku-demo-staging)"

node server.js